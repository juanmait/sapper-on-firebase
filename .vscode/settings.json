{
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "dist": true,
    "build": true,
    "__sapper__": true
  },
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true,
    "dist/**": true,
    "build/**": true,
    "__sapper__": true
  },
  "files.associations": {
    "*.svelte": "html"
  },
  "eslint.workingDirectories": [
    { "directory": "./", "changeProcessCWD": true }
  ],
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    { "language": "typescript", "autoFix": true },
    {
      "language": "html",
      "autoFix": true
    }
  ],
  "cSpell.words": [
    "Borat",
    "firebaserc",
    "firestore",
    "precaches"
  ]
}
